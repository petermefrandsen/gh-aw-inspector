{
  "name": "gh-aw-inspector",
  "displayName": "GH Agentic Workflows Inspector",
  "description": "A VS Code extension designed to interface with the GitHub Agentic Workflows CLI (gh aw).",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gh-aw-inspector.startSimulation",
        "title": "GH AW: Start Simulation",
        "icon": "$(play)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gh-aw-inspector",
          "title": "GH Agentic Workflows",
          "icon": "resources/gh-aw-inspector.svg"
        }
      ]
    },
    "views": {
      "gh-aw-inspector": [
        {
          "type": "webview",
          "id": "gh-aw-inspector-sidebar",
          "name": "Workflows",
          "icon": "resources/gh-aw-inspector.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo 'No unit tests yet'",
    "test:e2e": "echo 'No playwright tests yet'",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^8.57.1",
    "typescript": "^5.3.3"
  }
}